<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 允许使用transitions -->
        <item name="android:windowContentTransitions" tools:targetApi="N_MR1">true</item>
        <item name="android:statusBarColor" tools:targetApi="N_MR1">@android:color/white</item>
        <!--<item name="android:windowBackground">@mipmap/icon_splash</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="N_MR1">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
